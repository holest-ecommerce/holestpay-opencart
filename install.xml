<?xml version="1.0" encoding="utf-8"?>
<extension>
    <name>HolestPay Payment Gateway</name>
    <code>holestpay</code>
    <version>1.0.0</version>
    <author>HolestPay</author>
    <link>https://holestpay.com</link>
    <description>HolestPay Payment Gateway for OpenCart 3 and 4</description>
    
    <install>
        <sql>
            <![CDATA[
            INSERT INTO `oc_setting` (`store_id`, `code`, `key`, `value`, `serialized`) VALUES
            (0, 'payment_holestpay', 'payment_holestpay_status', '0', 0),
            (0, 'payment_holestpay', 'payment_holestpay_sort_order', '0', 0),
            (0, 'payment_holestpay', 'payment_holestpay_merchant_id', '', 0),
            (0, 'payment_holestpay', 'payment_holestpay_secret_key', '', 0),
            (0, 'payment_holestpay', 'payment_holestpay_test_mode', '1', 0),
            (0, 'payment_holestpay', 'payment_holestpay_total', '0', 0),
            (0, 'payment_holestpay', 'payment_holestpay_geo_zone_id', '0', 0);
            ]]>
        </sql>
    </install>
    
    <uninstall>
        <sql>
            <![CDATA[
            DELETE FROM `oc_setting` WHERE `code` = 'payment_holestpay';
            ]]>
        </sql>
    </uninstall>
</extension>

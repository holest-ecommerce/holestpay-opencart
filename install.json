{
    "name": "HolestPay Payment Gateway for OpenCart 3 & 4",
    "version": "1.0.0",
    "author": "HolestPay Integration Team",
    "link": "https://pay.holest.com",
    "compatibility": "4.0.0.0+",
    "description": "Complete HolestPay payment and shipping integration for OpenCart with support for multiple payment methods, subscriptions, and real-time shipping cost calculation.",
    "keywords": [
        "payment",
        "holestpay",
        "gateway",
        "subscription",
        "shipping",
        "vault",
        "webhook"
    ],
    "category": "Payment Gateways",
    "license": "Commercial",
    "support": {
        "email": "support@pay.holest.com",
        "website": "https://pay.holest.com/support",
        "documentation": "https://docs.pay.holest.com/opencart"
    },
    "requirements": {
        "opencart": "3.0.0.0+",
        "php": "7.4+",
        "extensions": [
            "curl",
            "json",
            "openssl"
        ]
    },
    "features": [
        "Multiple HolestPay payment methods support",
        "Real-time shipping cost calculation",
        "Subscription and recurring payment support",
        "Vault token management for saved payment methods",
        "Webhook integration for order updates",
        "Admin order management interface",
        "Multi-environment support (Sandbox/Production)",
        "Request signing for secure communication",
        "OpenCart 3 & 4 compatibility"
    ],
    "installation": {
        "type": "extension",
        "method": "upload",
        "auto_install": true
    },
    "files": {
        "admin": [
            "controller/payment/holestpay.php",
            "model/payment/holestpay.php",
            "view/template/payment/holestpay.twig",
            "view/javascript/holestpay-admin.js",
            "language/en-gb/payment/holestpay.php"
        ],
        "catalog": [
            "controller/payment/holestpay.php",
            "model/payment/holestpay.php",
            "model/shipping/holestpay.php",
            "view/template/payment/holestpay.twig",
            "view/template/payment/holestpay_order_result.twig",
            "view/template/payment/holestpay_error.twig",
            "view/javascript/holestpay-checkout.js",
            "language/en-gb/payment/holestpay.php",
            "language/en-gb/shipping/holestpay.php",
            "language/sr-rs/payment/holestpay.php",
            "language/sr-rs/shipping/holestpay.php",
            "language/sr-yu/payment/holestpay.php",
            "language/sr-yu/shipping/holestpay.php",
            "language/mk-mk/payment/holestpay.php",
            "language/mk-mk/shipping/holestpay.php"
        ],
        "extension": [
            "holestpay/holestpay_webhook.php",
            "holestpay/holestpay_return.php",
            "holestpay/holestpay_cron.php"
        ]
    },
    "database": {
        "tables": [
            "holestpay_config",
            "holestpay_payment_methods",
            "holestpay_shipping_methods",
            "holestpay_vault_tokens",
            "holestpay_subscriptions"
        ],
        "modifications": [
            {
                "table": "order",
                "columns": [
                    "hpay_uid",
                    "hpay_status",
                    "hpay_data"
                ]
            }
        ]
    },
    "configuration": {
        "required_fields": [
            "payment_holestpay_merchant_site_uid",
            "payment_holestpay_secret_key"
        ],
        "optional_fields": [
            "payment_holestpay_environment",
            "payment_holestpay_title",
            "payment_holestpay_description",
            "payment_holestpay_sort_order",
            "payment_holestpay_geo_zone_id",
            "payment_holestpay_order_status_id",
            "payment_holestpay_order_status_failed_id"
        ]
    },
    "webhooks": {
        "endpoint": "extension/holestpay/holestpay_webhook.php",
        "supported_topics": [
            "posconfig-updated",
            "orderupdate", 
            "payresult"
        ]
    },
    "changelog": [
        {
            "version": "1.0.0",
            "date": "2024-12-19",
            "changes": [
                "Initial release",
                "Complete HolestPay payment integration",
                "Multiple payment methods support",
                "Shipping methods with cost calculation",
                "Subscription and recurring payments",
                "Vault token management",
                "Webhook integration",
                "Admin order management",
                "OpenCart 3 & 4 compatibility"
            ]
        }
    ]
}

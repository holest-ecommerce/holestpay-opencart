{
    "name": "HolestPay Payment Gateway",
    "code": "holestpay",
    "version": "1.0.0",
    "author": "HolestPay",
    "link": "https://holestpay.com",
    "description": "HolestPay Payment Gateway for OpenCart 3 and 4",
    "type": "payment",
    "category": "payment",
    "license": "MIT",
    "support": {
        "email": "support@holestpay.com",
        "url": "https://holestpay.com/support"
    },
    "requirements": {
        "opencart": ">=3.0.0",
        "php": ">=7.4"
    },
    "install": {
        "sql": [
            "INSERT INTO `oc_setting` (`store_id`, `code`, `key`, `value`, `serialized`) VALUES (0, 'payment_holestpay', 'payment_holestpay_status', '0', 0)",
            "INSERT INTO `oc_setting` (`store_id`, `code`, `key`, `value`, `serialized`) VALUES (0, 'payment_holestpay', 'payment_holestpay_sort_order', '0', 0)",
            "INSERT INTO `oc_setting` (`store_id`, `code`, `key`, `value`, `serialized`) VALUES (0, 'payment_holestpay', 'payment_holestpay_merchant_id', '', 0)",
            "INSERT INTO `oc_setting` (`store_id`, `code`, `key`, `value`, `serialized`) VALUES (0, 'payment_holestpay', 'payment_holestpay_secret_key', '', 0)",
            "INSERT INTO `oc_setting` (`store_id`, `code`, `key`, `value`, `serialized`) VALUES (0, 'payment_holestpay', 'payment_holestpay_test_mode', '1', 0)",
            "INSERT INTO `oc_setting` (`store_id`, `code`, `key`, `value`, `serialized`) VALUES (0, 'payment_holestpay', 'payment_holestpay_total', '0', 0)",
            "INSERT INTO `oc_setting` (`store_id`, `code`, `key`, `value`, `serialized`) VALUES (0, 'payment_holestpay', 'payment_holestpay_geo_zone_id', '0', 0)"
        ]
    },
    "uninstall": {
        "sql": [
            "DELETE FROM `oc_setting` WHERE `code` = 'payment_holestpay'"
        ]
    },
    "files": [
        "admin/controller/extension/payment/holestpay.php",
        "admin/language/en-gb/extension/payment/holestpay.php",
        "admin/language/mk-MK/extension/payment/holestpay.php",
        "admin/language/sr-CS/extension/payment/holestpay.php",
        "admin/language/sr-RS/extension/payment/holestpay.php",
        "admin/view/javascript/holestpay.js",
        "admin/view/stylesheet/holestpay.css",
        "admin/view/template/extension/payment/holestpay.twig",
        "catalog/controller/extension/payment/holestpay.php",
        "catalog/language/en-gb/extension/payment/holestpay.php",
        "catalog/language/mk-MK/extension/payment/holestpay.php",
        "catalog/language/sr-CS/extension/payment/holestpay.php",
        "catalog/language/sr-RS/extension/payment/holestpay.php",
        "catalog/model/extension/payment/holestpay.php",
        "catalog/view/javascript/holestpay.js",
        "catalog/view/theme/default/stylesheet/holestpay.css",
        "catalog/view/theme/default/template/extension/payment/holestpay_failure.twig",
        "catalog/view/theme/default/template/extension/payment/holestpay_success.twig",
        "holestpay.ocmod.xml"
    ]
}

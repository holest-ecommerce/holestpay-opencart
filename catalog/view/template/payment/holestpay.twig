}

#holestpay-method-icon {
  max-height: 30px;
  margin-right: 10px;
}

.holestpay-shipping-cost {
  font-weight: bold;
  color: #28a745;
}

#holestpay-payment-form .btn-primary {
  background-color: #007bff;
  border-color: #007bff;
  padding: 10px 30px;
  font-size: 16px;
}

#holestpay-payment-form .btn-primary:hover {
  background-color: #0056b3;

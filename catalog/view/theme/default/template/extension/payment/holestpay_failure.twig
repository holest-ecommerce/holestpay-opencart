{{ header }}
<div class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="row">
    <div id="content" class="col-sm-12">
      <h1>{{ heading_title }}</h1>
      <div class="alert alert-danger">
        <i class="fa fa-exclamation-circle"></i> {{ text_failure }}
      </div>
      <div class="buttons">
        <div class="pull-right">
          <a href="{{ continue }}" class="btn btn-primary">{{ text_continue }}</a>
        </div>
      </div>
    </div>
  </div>
</div>
{{ footer }}
